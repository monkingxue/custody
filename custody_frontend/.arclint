{
  "linters": {
    "spelling": {
      "type": "spelling"
    },
    "generated": {
      "type": "generated"
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "general-text": {
      "type": "text",
      "text.max-line-length": 240,
      "exclude": ["(\\.svg$)", "(iconfont\\.css$)", "(\\.json$)"],
      "severity": {
        "5": "disabled"
      }
    },
    "xml": {
      "type": "xml",
      "include": "(\\.xml$)"
    },
    "json": {
      "include": [
          "(^\\.arcconfig$)",
          "(^\\.arclint$)",
          "(\\.json$)"
      ],
      "type": "json"
    },
    "prettier-eslint": {
      "type": "prettier-eslint",
      "include": "(\\.js$)",
      "bin": "./node_modules/.bin/prettier-eslint",
      "prettier-eslint.cwd": "./src"
    },
    "cppcheck": {
      "type": "cppcheck",
      "include": "(\\.(h|c|hpp|cpp)$)"
    }
  }
}
